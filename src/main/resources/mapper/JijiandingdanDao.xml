<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.JijiandingdanDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.JijiandingdanEntity" id="jijiandingdanMap">
        <result property="dingdanbianhao" column="dingdanbianhao"/>
        <result property="yonghuming" column="yonghuming"/>
        <result property="shouji" column="shouji"/>
        <result property="shoujianren" column="shoujianren"/>
        <result property="shoujiandianhua" column="shoujiandianhua"/>
        <result property="shoujiandizhi" column="shoujiandizhi"/>
        <result property="wuliugongsi" column="wuliugongsi"/>
        <result property="xiadanshijian" column="xiadanshijian"/>
        <result property="kuaidizhuangtai" column="kuaidizhuangtai"/>
        <result property="xinxibeizhu" column="xinxibeizhu"/>
        <result property="shangmenquhuo" column="shangmenquhuo"/>
        <result property="sfsh" column="sfsh"/>
        <result property="shhf" column="shhf"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.JijiandingdanVO" >
		SELECT * FROM jijiandingdan  jijiandingdan         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.JijiandingdanVO" >
		SELECT  jijiandingdan.* FROM jijiandingdan  jijiandingdan 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.JijiandingdanView" >

		SELECT  jijiandingdan.* FROM jijiandingdan  jijiandingdan 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.JijiandingdanView" >
		SELECT * FROM jijiandingdan  jijiandingdan <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM jijiandingdan
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM jijiandingdan
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM jijiandingdan
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM jijiandingdan
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM jijiandingdan
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>
</mapper>
